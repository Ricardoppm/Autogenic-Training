<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ricardomartins.lallaapp.Week.Activity_Progress"
    android:weightSum="4"
    android:orientation="vertical">

    <TableRow
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1">
        <ImageButton
            android:layout_height="match_parent"
            app:srcCompat="@drawable/progress_week4"
            android:id="@+id/Progress_BtWeek1"
            android:layout_margin="10dp"
            android:onClick="ButtonHandling"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="0.5"
            android:layout_width="0dp" />

        <ImageButton
            android:layout_height="match_parent"
            app:srcCompat="@drawable/progress_week4"
            android:id="@+id/Progress_BtWeek2"
            android:layout_margin="10dp"
            android:onClick="ButtonHandling"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_weight="0.5"
            android:layout_width="0dp" />
    </TableRow>

    <TableRow android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/progress_week4"
            android:layout_margin="10dp"
            android:id="@+id/Progress_BtWeek3"
            android:onClick="ButtonHandling"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/progress_week4"
            android:layout_margin="10dp"
            android:id="@+id/Progress_BtWeek4"
            android:onClick="ButtonHandling"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1" />
    </TableRow>

    <TableRow android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="2">


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/progress_week4"
            android:layout_margin="10dp"
            android:id="@+id/Progress_BtWeek5"
            android:onClick="ButtonHandling"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/progress_week4"
            android:layout_margin="10dp"
            android:id="@+id/Progress_BtWeek6"
            android:onClick="ButtonHandling"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_weight="1" />
    </TableRow>

    <TableRow android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:layout_width="0dp"
            app:srcCompat="@drawable/progress_week4"
            android:layout_margin="10dp"
            android:id="@+id/Progress_BtWeek7"
            android:onClick="ButtonHandling"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            android:baselineAlignBottom="false"
            android:layout_weight="0.5" />

    </TableRow>
</TableLayout>
