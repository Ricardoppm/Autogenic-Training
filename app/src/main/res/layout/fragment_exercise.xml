<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"
    android:background="@drawable/rectangle_inactive"
    android:id="@+id/Exercise_layout"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.25"
        android:weightSum="1">

        <TextView
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/DayNb"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textIsSelectable="false"
            android:textSize="@dimen/Opt_SubTitle_text"
            android:textAlignment="center"
            android:typeface="monospace"
            android:textStyle="normal|bold"
            android:layout_weight="0.7"
            android:gravity="fill"
            tools:ignore="HardcodedText" />

        <TextView
            android:text="Wednesday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/WeekDay"
            android:textAlignment="center"
            android:layout_weight="0.3"
            android:textSize="@dimen/Opt_smallText"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/m_red"
        android:id="@+id/Morning"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_weight="0.25"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/a_red"
        android:id="@+id/Anoon"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_weight="0.25"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/n_red"
        android:id="@+id/Night"
        android:background="@android:color/transparent"
        android:padding="5dp"
        android:layout_weight="0.25"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        tools:ignore="ContentDescription" />
</LinearLayout>
