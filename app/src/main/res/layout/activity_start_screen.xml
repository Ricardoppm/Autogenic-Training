<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ricardomartins.lallaapp.MainScreens.StartScreen">


    <Button
        android:text="@string/Start_ButtonStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Start_WeekStatus"
        android:layout_above="@+id/Start_Progress"
        android:layout_alignLeft="@+id/Start_Progress"
        android:layout_alignRight="@+id/Start_Progress"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="0dp"
        android:background="@color/Toggle_off"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="Add Exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="70dp"
        android:id="@+id/addex"
        android:layout_toRightOf="@+id/Bdelete"
        android:layout_alignBottom="@+id/Bdelete"
        android:visibility="invisible" />

    <Button
        android:text="Show Database"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:id="@+id/db"
        android:layout_toRightOf="@+id/addex"
        android:layout_alignBottom="@+id/addex"
        android:visibility="invisible" />

    <Button
        android:text="Delete db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/Bdelete"
        android:visibility="invisible" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/Start_WelcomeText"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_centerHorizontal="true"
        android:textStyle="normal|bold"
        android:layout_marginTop="15dp" />

    <Button
        android:text="@string/Start_ButtonProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Start_Progress"
        android:layout_centerVertical="true"
        android:layout_marginBottom="20dp"
        android:background="@color/Toggle_off"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:text="@string/Start_ButtonStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Start_Progress"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:id="@+id/Start_Statistics"
        android:layout_below="@+id/Start_Progress"
        android:layout_alignRight="@+id/Start_Progress"
        android:background="@color/Toggle_off"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/help_icon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/Start_Help"
        android:layout_alignParentTop="false"
        android:maxWidth="35dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Bdelete"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/Start_DateDisplay"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="invisible" />

    <Button
        android:text="Day -1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Start_ReduceDay"
        android:layout_alignBottom="@+id/Start_DateDisplay"
        android:layout_toLeftOf="@+id/Start_DateDisplay"
        android:visibility="invisible" />

    <Button
        android:text="Day +1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Start_IncreaseDay"
        android:layout_alignBottom="@+id/Start_DateDisplay"
        android:layout_toRightOf="@+id/Start_DateDisplay"
        android:visibility="invisible" />
</RelativeLayout>
